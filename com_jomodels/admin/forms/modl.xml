<?xml version="1.0" encoding="utf-8"?>
<form
	addruleprefix="JLTRY\Component\Jomodels\Administrator\Rule"
	addfieldprefix="JLTRY\Component\Jomodels\Administrator\Field"
>
	<config>
		<inlinehelp button="show"/>
	</config>
	<fieldset name="details">
        <!-- Default Fields. -->
        <!-- Id Field. Type: Text (joomla) -->
        <field
            name="id"
            type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
            description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0"
            readonly="true"
        />
        <!-- Date Created Field. Type: Calendar (joomla) -->
        <field
            name="created"
            type="calendar"
            label="COM_JOMODELS_MODL_CREATED_DATE_LABEL"
            description="COM_JOMODELS_MODL_CREATED_DATE_DESC"
            size="22"
            format="%Y-%m-%d %H:%M:%S"
            filter="user_utc"
        />
        <!-- User Created Field. Type: User (joomla) -->
        <field
            name="created_by"
            type="user"
            label="COM_JOMODELS_MODL_CREATED_BY_LABEL"
            description="COM_JOMODELS_MODL_CREATED_BY_DESC"
        />
        <!-- Published Field. Type: List (joomla) -->
        <field name="published" type="list" label="JSTATUS"
            description="JFIELD_PUBLISHED_DESC" class="chzn-color-state"
            filter="intval" size="1" default="1" >
            <option value="1">
                JPUBLISHED</option>
            <option value="0">
                JUNPUBLISHED</option>
            <option value="2">
                JARCHIVED</option>
            <option value="-2">
                JTRASHED</option>
        </field>
        <!-- Date Modified Field. Type: Calendar (joomla) -->
        <field name="modified" type="calendar" class="readonly"
            label="COM_JOMODELS_MODL_MODIFIED_DATE_LABEL" description="COM_JOMODELS_MODL_MODIFIED_DATE_DESC"
            size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
        <!-- User Modified Field. Type: User (joomla) -->
        <field name="modified_by" type="user"
            label="COM_JOMODELS_MODL_MODIFIED_BY_LABEL"
            description="COM_JOMODELS_MODL_MODIFIED_BY_DESC"
            class="readonly"
            readonly="true"
            filter="unset"
        />
        <!-- Access Field. Type: Accesslevel (joomla) -->
        <field name="access"
            type="accesslevel"
            label="JFIELD_ACCESS_LABEL"
            description="JFIELD_ACCESS_DESC"
            default="1"
            required="false"
        />
        <!-- Ordering Field. Type: Numbers (joomla) -->
        <field
            name="ordering"
            type="number"
            class="inputbox validate-ordering"
            label="COM_JOMODELS_MODL_ORDERING_LABEL"
            description=""
            default="0"
            size="6"
            required="false"
        />
        <!-- Version Field. Type: Text (joomla) -->
        <field
            name="version"
            type="text"
            class="readonly"
            label="COM_JOMODELS_MODL_VERSION_LABEL"
            description="COM_JOMODELS_MODL_VERSION_DESC"
            size="6"
            default="1"
            readonly="true"
            filter="unset"
        />
        <!-- Was added due to Permissions JS needing a Title field -->
        <!-- Let us know at gh-629 should this change -->
        <!-- https://github.com/vdm-io/Joomla-Component-Builder/issues/629#issuecomment-750117235 -->
        <field
            name="title"
            type="hidden"
            default="jomodels modl"
        />
        <!-- Dynamic Fields. -->
        <!-- Alias Field. Type: Text. (joomla) -->
        <field
            type="text"
            name="alias"
            label="COM_JOMODELS_MODL_ALIAS_LABEL"
            size="10"
            maxlength="50"
            default=""
            description="COM_JOMODELS_MODL_ALIAS_DESCRIPTION"
            class="text_area"
            readonly="false"
            disabled="false"
            required="false"
            filter="STRING"
            message="COM_JOMODELS_MODL_ALIAS_MESSAGE"
            hint="COM_JOMODELS_MODL_ALIAS_HINT"
            autocomplete="on"
        />
        <!-- Type Field. Type: Radio. (joomla) -->
        <field
            type="radio"
            name="type"
            label="COM_JOMODELS_MODL_TYPE_LABEL"
            description="COM_JOMODELS_MODL_TYPE_DESCRIPTION"
            class="btn-group btn-group-yesno"
            default="1"
            readonly="false"
            disabled="false">
            <!-- Option Set. -->
            <option value="1">
                COM_JOMODELS_MODL_NORMAL</option>
            <option value="0">
                COM_JOMODELS_MODL_FULL</option>
        </field>
        <!-- Text Field. Type: Editor. (joomla) -->
        <field
            type="editor"
            name="text"
            label="COM_JOMODELS_MODL_TEXT_LABEL"
            default="Some text"
            description="COM_JOMODELS_MODL_TEXT_DESCRIPTION"
            buttons="no"
            editor="codemirror|none"
            filter="safehtml"
        />
    </fieldset>

	<!-- Access Control Fields. -->
    <fieldset name="accesscontrol">
        <!-- Asset Id Field. Type: Hidden (joomla) -->
        <field
            name="asset_id"
            type="hidden"
            filter="unset"
        />
        <!-- Rules Field. Type: Rules (joomla) -->
        <field
            name="rules"
            type="rules"
            label="Permissions in relation to this modl"
            translate_label="false"
            filter="rules"
            validate="rules"
            class="inputbox"
            component="com_jomodels"
            section="modl"
        />
    </fieldset>
</form>